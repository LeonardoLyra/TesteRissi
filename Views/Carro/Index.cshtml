@model List<Carro>

@{
    ViewData["Title"] = "Carro - Index";
}

@{
    <div class="table-responsive">
        <table class="table table-hover">

            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Eixos</th>
                <th>Categoria</th>
                <th>Tamanho do <br>Porta Malas</th>
                <th>Portas</th>
                <th>Preco</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
            </tr>
            @foreach (var carro in Model)

            {
                <tr>
                    <td>@carro.IdCarro</td>
                    <td>@carro.Nome</td>
                    <td>@carro.Eixos</td>
                    <td>@carro.GetCategoria()</td>
                    <td>@carro.TamanhoPortaMalas</td>
                    <td>@carro.Portas</td>
                    <td>@carro.Preco</td>
                    <td>@carro.CreatedAt</td>
                    <td>@carro.UpdatedAt</td>

                    <td>
                        <a class="btn btn-sm btn-danger" href="/carro/delete/@carro.IdCarro">Apagar</a>
                        <a class="btn btn-sm btn-warning" href="/carro/update/@carro.IdCarro">Editar</a>
                    </td>

                </tr>

            }
        </table>
    </div>

    <a class="btn btn-primary" href="/carro/create">Adcionar</a>

}
