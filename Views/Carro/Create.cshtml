@model Carro

@{
    ViewData["Title"] = "Carro - Create";
}

<form asp-controller="Carro" asp-action="Create" method="POST">
    <h2>Cadastrar Carro</h2>
    <br />
    <div class="form-group">
        <label asp-for="Nome">Nome do Carro</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label>Eixos</label>
        <input asp-for="Eixos" class="form-control" />
        <span asp-validation-for="Eixos"></span>
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="NomeCategoria" class="form-control">
            @foreach (var categoria in ViewBag.Categorias)
            {
                <option value="@categoria.NomeCategoria">@categoria.NomeCategoria</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Tamanho do Porta Malas</label>
        <input asp-for="TamanhoPortaMalas" class="form-control" />
        <span asp-validation-for="TamanhoPortaMalas"></span>
    </div>

    <div class="form-group">
        <label>Preço</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco"></span>
    </div>

    <div class="form-group">
        <label>Portas</label>
        <input asp-for="Portas" class="form-control" />
        <span asp-validation-for="Portas"></span>
    </div>

    <button class="btn btn-primary">Salvar</button>
</form>
