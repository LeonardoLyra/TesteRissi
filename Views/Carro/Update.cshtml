@model Carro

@{
    ViewData["Title"] = "Carro - Update";
}

<form asp-controller="Carro" asp-action="Update" method="POST">

    <div class="form-group">
        <label asp-for="Nome">Nome do Carro</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label>Eixos</label>
        <input asp-for="Eixos" class="form-control" />
        <span asp-validation-for="Eixos"></span>
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="NomeCategoria" asp-items="@ViewBag.Categorias"
                class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label>Tamanho do Porta Malas</label>
        <input asp-for="TamanhoPortaMalas" class="form-control" />
        <span asp-validation-for="TamanhoPortaMalas"></span>
    </div>

    <div class="form-group">
        <label>Preço</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco"></span>
    </div>

    <div class="form-group">
        <label>Portas</label>
        <input asp-for="Portas" class="form-control" />
        <span asp-validation-for="Portas"></span>
    </div>

    <button class="btn btn-primary">Salvar</button>
</form>